    $(function($) {
        var elem =  $('.flex-promo-start-394492602');
        if($(window).width() >= 991){
            var imgPath = '/content/dam/adt5/com/home/ciara-bg-index2.jpg';
            if(imgPath){
                elem.attr("data-src" , imgPath);
            }

        }else{
            var imgPath = '';
            if(imgPath){
                elem.attr("data-src" , imgPath);
            }
        }
        elem.Lazy({
            scrollDirection: 'vertical',
            effect: 'fadeIn',
            effectTime: 250,
            threshold: 150,
            visibleOnly: true,
            onError: function(element) {
                console.log('error loading img .flex-promo-start-394492602: ' + element.data('src'));
            }
        });
    });
