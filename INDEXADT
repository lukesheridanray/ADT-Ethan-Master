<script>
    $(function($) {
        var elem =  $('.adt-form-ff-611').find("#container-form-footer-id");
        if($(window).width() >= 767){
            var imgPath = '/content/dam/adt5/com/home/kidflying-footerimage-weboptimized.jpg';
            if(imgPath){
                elem.attr("data-src" , imgPath);
            }

        }else{
            var imgPath = '';
            if(imgPath){
                elem.attr("data-src" , imgPath);
            }
        }
        elem.Lazy({
            scrollDirection: 'vertical',
            effect: 'fadeIn',
            effectTime: 250,
            threshold: 150,
            visibleOnly: true,
            onError: function(element) {
                console.log('error loading img .adt-form-ff-611: ' + element.data('src'));
            }
        });
    });
</script>
</div>
<div class="statichtml section">








	
	
		
